<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each_with_index do |post, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= post.name %></td>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= link_to "Show this post", post, class: "btn btn-secondary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="float-left mr-3">
  <button type="button" class="btn btn-primary">
    <%= link_to "New post", new_post_path, class: "text-white" %>
  </button>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-info" id="exampleModalLabel">List of Writers</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-striped text-info">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Name</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @posts.each_with_index do |post, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= post.name %></td>
              <td><%= link_to "Detail", post, class: "btn btn-info" %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>